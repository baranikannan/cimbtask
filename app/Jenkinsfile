pipeline {
  agent any
  options {
    skipDefaultCheckout(true)
  }
  stages{
    stage('checkout') {
      steps {
        checkout scm
      }
    }
    stage('terraform') {
      steps {
        sh 'ls -l'
        sh 'pwd'
        sh 'cd app && terraform init && terraform plan -var-file=test.tfvars -var app_version=v1 -no-color'
        
      }
    }
  }
}